@model List<ResultProductDto>

<section class="section" id="menu">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="section-heading">
                    <h6>Menümüz</h6>
                </div>
            </div>
        </div>
    </div>
    <div class="menu-item-carousel">
        <div class="col-lg-12">
            <div class="owl-menu-item owl-carousel">
                @foreach(var item in Model)
                {
                    <div class="item">
                        <div class='card' style="background-image:url(@item.ImageUrl);">
                            <div class="price"><h6>@item.Total ₺</h6></div>
                            <div class='info'>
                                <h1 class='title'>@item.ProductName</h1>
                                <p class='description'>@item.Description</p>
                                <div class="main-text-button">
                                    <div class="scroll-to-section"><a href="#reservation">Rezervasyon Yap <i class="fa fa-angle-down"></i></a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
              
            </div>
        </div>
</section>